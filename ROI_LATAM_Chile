    <script>
        // Datos de productos
        const products = {
            youth1: {
                name: "Artist 1 Youth - 1 Batería",
                fob: 1208.00,
                d2d: 1496.62,
                typicalHours: 10
            },
            youth2: {
                name: "Artist 1 Youth - 2 Baterías",
                fob: 1408.00,
                d2d: 1697.22,
                typicalHours: 12
            },
            se: {
                name: "Artist 1 SE - 2 Baterías",
                fob: 1628.00,
                d2d: 1917.88,
                typicalHours: 15
            },
            pro: {
                name: "Artist 1 Pro - 2 Baterías",
                fob: 1908.00,
                d2d: 2198.72,
                typicalHours: 20
            }
        };

        // Tipo de cambio USD a CLP
        const exchangeRate = 900;

        function calculateROI() {
            const productSelect = document.getElementById('product');
            const productId = productSelect.value;
            const product = products[productId];
            
            const hoursSaved = parseFloat(document.getElementById('hoursSaved').value);
            const hourlyRate = parseFloat(document.getElementById('hourlyRate').value);
            const weeks = parseFloat(document.getElementById('weeks').value);
            
            // Actualizar información del producto
            document.getElementById('selectedModel').textContent = product.name;
            document.getElementById('productCost').textContent = `$${product.d2d.toFixed(2)} USD`;
            
            // Cálculos
            const annualHoursSaved = hoursSaved * weeks;
            const annualSavingsCLP = annualHoursSaved * hourlyRate;
            const annualSavingsUSD = annualSavingsCLP / exchangeRate;
            
            // ROI en meses
            const roiMonths = (product.d2d / (annualSavingsUSD / 12)).toFixed(1);
            
            // ROI después de 1 año
            const roiYear = ((annualSavingsUSD - product.d2d) / product.d2d * 100).toFixed(0);
            
            // Actualizar resultados
            document.getElementById('roiResult').textContent = `${roiMonths} meses`;
            document.getElementById('annualSavings').textContent = `$${annualSavingsCLP.toLocaleString('es-CL')} CLP`;
            document.getElementById('annualHours').textContent = `${annualHoursSaved} horas`;
            document.getElementById('yearROI').textContent = `+${roiYear}%`;
        }

        // Inicializar con valores por defecto
        document.addEventListener('DOMContentLoaded', function() {
            calculateROI();
            
            // Actualizar cuando cambie el producto
            document.getElementById('product').addEventListener('change', function() {
                const productId = this.value;
                const typicalHours = products[productId].typicalHours;
                document.getElementById('hoursSaved').value = typicalHours;
                calculateROI();
            });
            
            // Actualizar cuando cambien inputs
            ['hoursSaved', 'hourlyRate', 'weeks'].forEach(id => {
                document.getElementById(id).addEventListener('input', calculateROI);
            });
        });
    </script>
